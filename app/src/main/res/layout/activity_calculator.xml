<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".Calculator">

    <TextView
        android:id="@+id/tview"
        android:layout_width="match_parent"
        android:layout_height="308dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/but"
        android:gravity="bottom|right"

        android:textColor="@android:color/background_dark"
        android:textSize="70sp" />

    <Button
        android:id="@+id/three"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/see"
        android:layout_toEndOf="@+id/eight"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="3"
        android:textSize="20sp" />

    <Button
        android:id="@+id/nine"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignStart="@+id/three"
        android:layout_alignTop="@+id/eight"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="9"
        android:textSize="20sp" />

    <Button
        android:id="@+id/six"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/three"
        android:layout_alignStart="@+id/three"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="6"
        android:textSize="20sp" />

    <Button
        android:id="@+id/equal"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/see"
        android:layout_toEndOf="@+id/eight"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="="
        android:textSize="20sp" />

    <Button
        android:id="@+id/eight"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/seven"
        android:layout_toEndOf="@+id/see"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="8"
        android:textSize="20sp" />

    <Button
        android:id="@+id/five"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_below="@+id/seven"
        android:layout_toEndOf="@+id/see"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="5"
        android:textSize="20sp" />

    <Button
        android:id="@+id/two"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/see"
        android:layout_toEndOf="@+id/see"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="2"
        android:textSize="20sp" />

    <Button
        android:id="@+id/zero"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignTop="@+id/see"
        android:layout_toEndOf="@+id/see"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="0"
        android:textSize="20sp" />

    <Button
        android:id="@+id/see"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="C"
        android:textSize="20sp" />

    <Button
        android:id="@+id/one"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/three"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/four"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/three"
        android:layout_alignParentStart="true"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="4"
        android:textSize="20sp" />

    <Button
        android:id="@+id/seven"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/four"
        android:layout_alignParentStart="true"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="7"
        android:textSize="20sp" />

    <Button
        android:id="@+id/plus"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/eight"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="+"
        android:textSize="20sp" />

    <Button
        android:id="@+id/minus"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_above="@+id/three"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="-"
        android:textSize="20sp" />

    <Button
        android:id="@+id/divide"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="/"
        android:textSize="20sp" />

    <Button
        android:id="@+id/multiply"
        android:layout_width="90dp"
        android:layout_height="80dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/three"
        android:background="@drawable/ripple_effect"
        android:onClick="calculate"
        android:text="X"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tviewdown"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="175dp"
        android:textAlignment="textEnd"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tviewup"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="95dp"
        android:textAlignment="textEnd"
        android:textSize="20sp" />


</RelativeLayout>